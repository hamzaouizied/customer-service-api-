                                    "customer_id"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Internet Plan"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Unlimited 100 Mbps"
                                    },
                                    "customer_id": {
                                        "type": "integer",
                                        "example": 1
